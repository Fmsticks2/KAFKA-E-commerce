# Kafka E-commerce System Environment Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Options: development, production
ENVIRONMENT=development

# Enable debug mode (auto-set based on environment if not specified)
# DEBUG=true

# Log level (auto-set based on environment if not specified)
# LOG_LEVEL=DEBUG

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
# Kafka Bootstrap Servers
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Kafka Client Configuration
KAFKA_CLIENT_ID=ecommerce-system
KAFKA_ACKS=all
KAFKA_RETRIES=3
KAFKA_BATCH_SIZE=16384
KAFKA_LINGER_MS=10
KAFKA_BUFFER_MEMORY=33554432
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_AUTO_COMMIT_INTERVAL_MS=1000
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_HEARTBEAT_INTERVAL_MS=3000
KAFKA_MAX_POLL_RECORDS=500
KAFKA_REQUEST_TIMEOUT_MS=40000

# Embedded Kafka (for development)
EMBEDDED_KAFKA_URL=http://localhost:9092
USE_EMBEDDED_KAFKA=false

# =============================================================================
# SERVICE PORTS
# =============================================================================
ORDER_SERVICE_PORT=5011
PAYMENT_SERVICE_PORT=6002
INVENTORY_SERVICE_PORT=5003
NOTIFICATION_SERVICE_PORT=5004
ORCHESTRATOR_SERVICE_PORT=5005

# =============================================================================
# TIMEOUT CONFIGURATION
# =============================================================================
SERVICE_STARTUP_TIMEOUT=60
SERVICE_HEALTH_CHECK_TIMEOUT=10
ORDER_PROCESSING_TIMEOUT=300
PAYMENT_PROCESSING_TIMEOUT=60
INVENTORY_PROCESSING_TIMEOUT=30
NOTIFICATION_PROCESSING_TIMEOUT=30

# =============================================================================
# RETRY CONFIGURATION
# =============================================================================
MAX_RETRIES=3
RETRY_BACKOFF_MS=1000
RETRY_BACKOFF_MULTIPLIER=2.0

# =============================================================================
# EXTERNAL SERVICES (Production)
# =============================================================================
# Payment Gateway
# PAYMENT_GATEWAY_URL=https://api.payment-provider.com
# PAYMENT_GATEWAY_API_KEY=your_api_key_here

# Email Service
# EMAIL_SERVICE_URL=https://api.email-provider.com
# EMAIL_SERVICE_API_KEY=your_api_key_here

# Database (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/ecommerce

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus metrics endpoint
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# Logging configuration
# LOG_FORMAT=json  # json or text
# LOG_FILE_PATH=/var/log/ecommerce/app.log

# =============================================================================
# SECURITY (Production)
# =============================================================================
# API Keys and secrets
# SECRET_KEY=your_secret_key_here
# JWT_SECRET=your_jwt_secret_here

# SSL/TLS Configuration
# SSL_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem