# Kafka E-commerce Backend Environment Variables
# Development Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
PORT=8000
HOST=localhost

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_AUTO_COMMIT_INTERVAL_MS=1000

# Service Ports (Internal)
ORDER_SERVICE_PORT=5001
PAYMENT_SERVICE_PORT=5002
INVENTORY_SERVICE_PORT=5003
NOTIFICATION_SERVICE_PORT=5004
ORCHESTRATOR_SERVICE_PORT=5005
MONITORING_SERVICE_PORT=5006
EMBEDDED_KAFKA_PORT=9092

# External Service URLs
PAYMENT_GATEWAY_URL=https://api.stripe.com
EMAIL_SERVICE_URL=https://api.sendgrid.com
SMS_SERVICE_URL=https://api.twilio.com

# Security (Change these in production!)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRATION_HOURS=24

# Monitoring
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Email Configuration (for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Notification Settings
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_SECONDS=5
EMAIL_QUEUE_SIZE=100
SMS_QUEUE_SIZE=50

# Order Processing
ORDER_TIMEOUT_MINUTES=15
PAYMENT_TIMEOUT_SECONDS=30
INVENTORY_RESERVATION_TIMEOUT_MINUTES=10

# Development Settings
AUTO_RELOAD=true
DEBUG_SQL=false
DEBUG_KAFKA=false