{
  "version": 2,
  "name": "kafka-ecommerce-dashboard",
  "builds": [
    {
      "src": "frontend-dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "CI": "false"
  }
}